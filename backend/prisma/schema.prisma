datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    email       String   @unique
    name        String
    role        Role     @default(USER)
    password    String
    token       String   @default("signuping")
    savedCarbon Float    @default(0)
}

model Market {
    id         Int      @id @default(autoincrement())
    createdAt  DateTime @default(now())
    name       String
    price      Float
    ci2savedkg Float    @default(0)
    image      String
}

enum Role {
    USER
    ADMIN
}
